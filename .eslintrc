{
  "root": true,
  "extends": [
    "@sno2wman/eslint-config-typescript",
    "@sno2wman/eslint-config/+ava"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  },
  "rules": {
    "import/extensions": 0,
    "unicorn/filename-case": [
      2,
      { "cases": { "pascalCase": true, "camelCase": true } }
    ]
  }
}
