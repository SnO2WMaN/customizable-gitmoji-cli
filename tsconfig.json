{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["ESNext"],
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "sourceRoot": "src",
    "outDir": "lib",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "exclude": ["lib"]
}
